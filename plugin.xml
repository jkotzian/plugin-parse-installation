<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
        id="org.cordova.test"
        version="0.1.0">

    <engines>
        <engine name="cordova" version="5.4.0" />
    </engines>

    <name>Hello</name>
    <description>A hello-world plugin</description>
    <author>Andreas Wallström</author>
    <keywords>foo,bar</keywords>

    <js-module src="hello.js" name="hello">
        <clobbers target="hello" />
    </js-module>

    <!-- Android -->
    <platform name="android">
        <source-file src="MyInstallation.java" target-dir="src/org/apache/cordova/plugin" />

        <config-file target="config.xml" parent="/*">
            <feature name="Hello" >
                <param name="android-package" value="org.cordova.test.Hello"/>
            </feature>
        </config-file>
    </platform>
</plugin>
